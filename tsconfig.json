{
  "compileOnSave": false,
  "compilerOptions": {
    "target": "es6",
    "outDir": "dist",
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "experimentalDecorators": true,
    "moduleResolution": "node"
  },
  "filesGlob": [
    "./src/**/*.ts",
    "./node_modules/@types/**/*.ts"
  ]
}
